<form action="/pirates/{{pirates.id}}?_method=PUT" method="POST">
	<div>
		<label for="name">Name:</label>
		<input type="text" name="name" value="{{pirates.name}}">
	</div>
	<div>
		<label for="birthplace">Birthplace:</label>
		<input type="text" name="birthplace" value="{{pirates.birthplace}}">
	</div>
	<div>
		<label for="death_year">Year of Death:</label>
		<input type="text" name="death_year" value="{{pirates.death_year}}">
	</div>
	<div>
		<label for="base">Based in:</label>
		<input type="text" name="base" value="{{pirates.base}}">
	</div> 
	<div>
		<label for="nickname">Nickname:</label>
		<input type="text" name="nickname" value="{{pirates.nickname}}">
	</div>
	<input type="submit" name="" value="Submit Changes">
</form>