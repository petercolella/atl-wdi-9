<h1>Pokemon</h1>

<form action="/pokemon/new">
    <input type="submit" value="Add a New Pokemon!" />
</form>

<ul>
  {{#each pokemon}}
    <li><a href="/pokemon/{{@index}}"><h2>{{name}}</h2></a></li>
    <img src="{{img}}">
    <br>
    <div style="display: inline-flex;">
	    <form action="/pokemon/{{@index}}/edit">
	    	<input type="submit" value="EDIT {{name}}">
	    </form>
	    <form action="/pokemon/{{@index}}?_method=DELETE" method="POST">
	      <input type="submit" value="DELETE {{name}}"/>
	    </form>
    </div>
    <br>
  {{/each}}
</ul>